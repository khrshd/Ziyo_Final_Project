[sambashare]
path = /sambashare
writable = yes
read only = no
guest ok = yes
guest only = yes
browseable = yes
public = yes


[sambashareopen]
comment = Samba share
path = /sambashare/open
create mask = 0777
directory mask = 0777
writable = yes
guest ok = yes
guest only = yes
public = yes
valid user : guest

[sambasharesecure]
comment = Samba share
path = /sambashare/secure
valid users = sambaadmin
writable = yes
guest ok = no
browseable = yes

#[guest]
#path = /sambashare/open
#read only = no
#guest ok = yes
#guest only = yes


[global]
        workgroup = SAMBA
        security = user
       # map to guest = Bad User
       # guest account = nobody

        passdb backend = tdbsam

        printing = cups
        printcap name = cups
        load printers = yes
        cups options = raw
        ##map to guest = Bad User

[homes]
        comment = Home Directories
        valid users = %S, %D%w%S
        browseable = No
        read only = No
        inherit acls = Yes

[printers]
        comment = All Printers
        path = /var/tmp
        printable = Yes
        create mask = 0600
        browseable = No

[print$]
        comment = Printer Drivers
        path = /var/lib/samba/drivers
        write list = @printadmin root
        force group = @printadmin
        create mask = 0664
        directory mask = 0775
